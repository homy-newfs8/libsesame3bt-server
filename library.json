{
	"name": "libsesame3bt-server",
	"version": "0.1.3",
	"description": "Bluetooth LE server (peripheral) for CANDY HOUSE SESAME Remote\nNeeds C++17 environment.",
	"license": "MIT",
	"frameworks": "Arduino",
	"platforms": "espressif32",
	"build": {
		"srcDir": "lib/libsesame3bt-server",
		"flags": "-std=gnu++17",
		"unflags": "-std=gnu++11"
	},
	"export": {
		"include": [
			"lib/libsesame3bt-server",
			"example",
			"README.md",
			"CHANGELOG.md",
			"LICENSE.txt"
		]
	},
	"dependencies": {
		"libsesame3bt-core": "https://github.com/homy-newfs8/libsesame3bt-core#v0.9.0",
		"h2zero/NimBLE-Arduino": "~2.2.3"
	},
	"development_dependencies": {
		"h2zero/NimBLE-Arduino": "~2.2.3"
	}
}
